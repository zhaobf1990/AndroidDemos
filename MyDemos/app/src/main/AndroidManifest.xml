<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alarmproject.zhaobf.mydemos">

    <permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SurfaceViewDemoActivity"
            android:label="@string/title_activity_surface_view_demo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MultiTouchTestActivity"
            android:label="@string/title_activity_multi_touch_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListAnimActivity"
            android:label="@string/title_activity_list_anim"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Anim.Anim1Activity" />
        <activity android:name=".Anim.LensFocusActivity" />
        <activity android:name=".Anim.ToGoneActivity" />
        <activity
            android:name=".OtherActivity"
            android:label="@string/title_activity_other"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".other.ScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_screen"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".other.CustomerActivity" />
        <activity android:name=".async.HandlerTestActivity" />
        <activity android:name=".AsyncActivity" />
        <activity android:name=".async.AsyncTaskTestActivity" />
        <activity android:name=".other.TestTextViewActivity" />
        <activity android:name=".other.ProgressBarActivity" />
        <activity android:name=".StorageActivity" />
        <activity android:name=".Storage.SqliteActivity" />
        <activity
            android:name=".other.RectActivity"
            android:label="@string/title_activity_rect"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".other.SuccessActivity" />
        <activity android:name=".other.FragmentTest.Main2Activity" />
        <activity android:name=".ListView.EmptyActivity" />
        <activity android:name=".other.DialogActivity" />
        <activity android:name=".async.Handler2Activity"></activity>
    </application>

</manifest>